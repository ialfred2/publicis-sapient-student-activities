    <!--creating components inside script-->
    <script type = "text/babel">
        function UserList() {
            let list = [{name: "Alex", age: 35, gender: "Male"}, {name: "Suma", age:40, gender: "Female"}];
            return (<div>
                {
                    list.map(item => <div> {item.name},  {item.age}, {item.gender}</div>)
                }
            </div>);
        }
        function User() {
            let name = Name;
            return (<div>
                <h2>This is user component</h2>
                <h3> {name}</h3>
            </div>);
        }
        // creating a component that will be a function name must be with uppercase
        function App() {
            return (<div>
                <h1>User Table</h1>
                <table border = "1">
            <thread>
                <tr>
                    <th> Name</th><th>Age</th><th>Gender</th>
                    </tr>
            
            </thread>
            <tbody>
                <tr>
                    <td>Alex</td><td>30</td><td>Male</td>
                </tr>
                <tr>
                    <td>Suma</td><td> 40</td>><td>Female</td>
                </tr>
            </tbody>
                <User />
                <UserList />
            </div>);
        }
        // patching the component to the browser DOM
        ReactDOM.render(<App />, document.getElementById('root'));
    </script>
